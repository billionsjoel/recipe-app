<%= form_with(model: @recipe) do |form| %>

  <div class="mb-3 mt-3">
    <%= form.label :name %>
      <%= form.text_field :name, autofocus: true, class: 'form-control', required: true %>
  </div>


  <div class="mt-3">
      <%= form.label :preparation_time, class: "label" %>
      <%= form.time_field :preparation_time, class: 'form-control', required: true %>
  </div>

  <div class="mt-3">
    <%= form.label :description, class: "label" %>
      <%= form.text_area :description, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="action">
    <%= form.check_box :public %>
    <%= form.label :public, class: "checkbox" %>
  </div>

  <div class="action">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
<%= form_with(model: recipe_food) do |form| %>

  <div class="mb-3 mt-3">
    <%= form.label :food, %><br />
    <div class="select is-fullwidth">
      <%= form.select :food_id, @foods.collect { |food| [food.name, food.id] }, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :quantity %><br />
    <div class="control">
      <%= form.text_field :quantity, class: "form-control", type: "number", required: true, min: 1 %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>